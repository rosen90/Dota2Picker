<Page x:ConnectionId='1'
    x:Class="Dota2Picker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dota2Picker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:localModels="using:Dota2Picker.Models"
                                                       
	                                                       >

    <Grid x:ConnectionId='2' x:Name="MainGrid" Background="#61369f">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--Darker Search bar -->
        <Rectangle Grid.Row="0" 
                   Grid.ColumnSpan="10" 
                   Fill="#572b98" />

        <!-- Main SearchBox -->
        <TextBox x:ConnectionId='3' x:Name="SearchBox" 
                 Foreground="Bisque"
                 Visibility="Collapsed" 
                 Grid.Row="0"
                 Grid.Column="1"
                 Grid.ColumnSpan="9" 
                 FontSize="24" 
                 PlaceholderText="Search..."
                                                    
                 Style="{StaticResource TextBoxStyle1}"/>
        
        <!-- Show Hide SearchBox-->
        <Button x:ConnectionId='4' x:Name="SearchBtn" 
                Grid.Row="0" 
                Grid.Column="9" 
                FontSize="24" 
                HorizontalAlignment="Right" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE1A3;" 
                Background="Transparent" 
                                     Style="{StaticResource ButtonStyle1}">
        </Button>

            <!-- Info Message -->
        <TextBlock x:ConnectionId='5' Name="InfoMsg"
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="10"
                   HorizontalAlignment="Center"
                   TextWrapping="WrapWholeWords" 
                   FontFamily="Georgia"
                   FontSize="24"
                   Margin="8"
                   Foreground="Bisque"
                   Text="Select a hero to counter it..." 
                  />

        <Grid x:ConnectionId='6' x:Name="gridHeroes"
              Grid.Row="2"
              Grid.ColumnSpan="10"
              HorizontalAlignment="Center"
              ScrollViewer.VerticalScrollBarVisibility="Hidden">

            <!--<Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>-->

            <GridView x:ConnectionId='15' x:Name="gridViewHeroes"
                      IsItemClickEnabled="True"
                                                    
                      SelectionMode="Single"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden">
                
                <GridView.ItemTemplate>
                    <DataTemplate                              >
                        <Grid x:ConnectionId='16'                                        ToolTipService.Placement="Top" HorizontalAlignment="Center" Width="102" Height="75">
                            <Image x:ConnectionId='17' Width="100"  Height="70"                           HorizontalAlignment="Center" VerticalAlignment="Top"></Image>
                            <TextBlock x:ConnectionId='18' FontSize="14" Foreground="Bisque"                      MaxWidth="102" HorizontalAlignment="Center" VerticalAlignment="Bottom"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <!--Hamburger Menu -->
        <Button x:ConnectionId='7' Name ="HamburgerButton" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE700;" 
                FontSize="36"
                Background="Transparent"
                Grid.Row="0"
                Grid.Column="0"
                                              />

        <SplitView x:ConnectionId='8' Name="MySplitView" 
                   Grid.Row="1"
                   Grid.ColumnSpan="5"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="190" 
                   CompactPaneLength="0" 
                   HorizontalAlignment="Left"
                   Grid.RowSpan="2"
                   ManipulationMode="TranslateX">

            <SplitView.Pane>
                <Grid x:ConnectionId='9' x:Name="GridPane">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ListBox x:ConnectionId='10' SelectionMode="Single"
                         Name="IconsListBox" 
                         Grid.Row="0"
                         Grid.RowSpan="4"
                         Background="#2b2b2b"
                                                                         >

                    <!--First Item of the list -->
                    <ListBoxItem >
                        <StackPanel Orientation="Horizontal" >
                            <!--Symbol-->
                            <TextBlock FontFamily="Segoe MDL2 Assets" 
                                       Foreground="White" 
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Text="&#xE8A9;" />
                            <!--Text-->
                            <TextBlock x:ConnectionId='14' Name="AllHeroes"
                                       Text="All Heroes" 
                                       FontSize="18" 
                                       VerticalAlignment="Bottom"
                                       Foreground="White" 
                                       Margin="15,0,0,0" 
                                       FontFamily="Segoe UI" />
                        </StackPanel>
                    </ListBoxItem>

                    <!--Second Item-->
                    <ListBoxItem >
                        <StackPanel Orientation="Horizontal">
                            <!--Symbol -->
                            <Image Source="ms-appx:///Resources/strength.png"
                                   Stretch="Fill"
                                   Width="32"
                                   Height="32"
                                   VerticalAlignment="Top"
                                   Margin="0,0,0,0"
                                   HorizontalAlignment="Center"/>
                            <!-- Text -->
                            <TextBlock Text="Strength" 
                                       FontSize="18"
                                       Foreground="White" 
                                       Margin="15,0,0,0" 
                                       VerticalAlignment="Bottom"
                                       FontFamily="Segoe UI" />
                        </StackPanel>
                    </ListBoxItem>

                    <!--Third Item-->
                    <ListBoxItem >
                        <StackPanel Orientation="Horizontal">
                            <!--Symbol-->
                            <Image Source="ms-appx:///Resources/agility.png"
                                   Stretch="Fill"
                                   Width="32"
                                   Height="32"
                                   VerticalAlignment="Top"
                                   Margin="0,0,0,0"
                                   HorizontalAlignment="Center"/>

                            <!--Text-->
                            <TextBlock Text="Agility" 
                                       FontSize="18" 
                                       Foreground="White" 
                                       Margin="15,0,0,0" 
                                       VerticalAlignment="Bottom"
                                       FontFamily="Segoe UI" />
                        </StackPanel>
                    </ListBoxItem>

                    <!--Fourth Item-->
                    <ListBoxItem >
                        <StackPanel Orientation="Horizontal">
                            <!--Symbol-->
                            <Image Source="ms-appx:///Resources/intelligence.png"
                                   Stretch="Fill"
                                   Width="32"
                                   Height="32"
                                   VerticalAlignment="Top"
                                   Margin="0,0,0,0"
                                   HorizontalAlignment="Center"/>

                            <!--Text-->
                            <TextBlock Text="Intelligence" 
                                       FontSize="18" 
                                       Foreground="White"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Segoe UI" />
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>
                    <ListBox x:ConnectionId='11' SelectionMode="Single"
                         Name="SettingsListBox" 
                         Grid.Row="4"
                         Background="#2b2b2b"
                         BorderThickness="0,2,0,0"
                         BorderBrush="White"
                         ScrollViewer.VerticalScrollMode="Auto">

                        <ListBoxItem x:ConnectionId='12' x:Name="Tutorial" VerticalAlignment="Bottom" Style="{StaticResource SettingsStyle}">
                            <StackPanel Orientation="Horizontal">
                                <!--Symbol-->
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                       Foreground="White" 
                                       FontSize="24"
                                       VerticalAlignment="Center"
                                       Text="&#xE939;"
                                       Margin="3,0,0,0"/>
                                <!--Text-->
                                <TextBlock Text="Tutorial" 
                                       FontSize="18" 
                                       VerticalAlignment="Bottom"
                                       Foreground="White" 
                                       Margin="18,0,0,0" 
                                       FontFamily="Segoe UI" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:ConnectionId='13' x:Name="Settings" VerticalAlignment="Bottom" Style="{StaticResource SettingsStyle}">
                            <StackPanel Orientation="Horizontal">
                                <!--Symbol-->
                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                       Foreground="White" 
                                       FontSize="24"
                                       VerticalAlignment="Center"
                                       Text="&#xE115;"
                                       Margin="3,0,0,0"/>
                                <!--Text-->
                                <TextBlock Text="Settings" 
                                       FontSize="18" 
                                       VerticalAlignment="Bottom"
                                       Foreground="White" 
                                       Margin="18,0,0,0" 
                                       FontFamily="Segoe UI" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </SplitView.Pane>
        </SplitView>

    </Grid>
</Page>

